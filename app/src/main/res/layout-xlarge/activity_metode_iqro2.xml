<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_metode_iqro_1"
    android:orientation="vertical"
    tools:context="com.alpha.aqra.MetodeIqro2" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager2"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_marginTop="370dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true" />

    <com.alpha.aqra.CirclePageIndicator
        android:id="@+id/pagerIndicator2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnBackHome2"
        android:background="@drawable/btn_home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="240dp"
        android:onClick="OnClickSlideIqro2" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnSound2"
        android:background="@drawable/btn_sound"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="240dp"
        android:layout_marginBottom="10dp"
        android:onClick="OnClickSlideIqro2" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/tIqro2"
        android:background="@drawable/btn_iqro_2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:onClick="OnClickSlideIqro2"/>
</RelativeLayout>