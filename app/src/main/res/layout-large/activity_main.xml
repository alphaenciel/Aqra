<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/bg_home"
    tools:context="com.alpha.aqra.MainActivity">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/pelafalan"
        android:background="@drawable/btn_menu_pelafalan"
        android:layout_marginTop="255dp"
        android:onClick="onButtonHomeClick"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/metodeIqro"
        android:layout_toStartOf="@+id/metodeIqro" />


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/metodeIqro"
        android:background="@drawable/btn_menu_metode_iqro"
        android:layout_alignTop="@+id/pelafalan"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonHomeClick" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/menu_latihan"
        android:background="@drawable/btn_menu_latihan"
        android:layout_alignTop="@+id/metodeIqro"
        android:layout_toRightOf="@+id/metodeIqro"
        android:layout_toEndOf="@+id/metodeIqro"
        android:onClick="onButtonHomeClick" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/pengaturan"
            android:background="@drawable/btn_pengaturan"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="-5dp"
            android:onClick="onButtonHomeClick" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/informasi"
            android:background="@drawable/btn_informasi"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-5dp"
            android:onClick="onButtonHomeClick"
            android:layout_marginRight="-5dp" />
    </RelativeLayout>


</RelativeLayout>
